
[
    {
      "name": "${container_name}",
      "image": "${image}",
      "portMappings": [
        {
          "containerPort": ${container_port},
          "hostPort": ${container_port}
        }
      ],
      "cpu": ${task_cpu},
      "memory": ${task_memory},
      "networkMode": "awsvpc",
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${log_group}",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "${container_name}"
        }
      },
      "environment": [
        {
          "name": "FOO",
          "value": "BAR"
        },
        {
          "name" : "PORT",
          "value": "${container_port}"
        }
      ]
    }
  ]